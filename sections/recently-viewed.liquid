{{ 'section-recently-viewed.css' | asset_url | stylesheet_tag }}

{% comment %}
  TODO: Use section settings to allow for customizable padding
{% endcomment %}
{%- style -%}
  .section-{{ section.id }}-padding {
    /* padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; */
    padding-top: 36px;
    /* padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px; */
    padding-bottom: 36px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      /* padding-top: {{ section.settings.padding_top }}px; */
      padding-top: 36px;
      /* padding-bottom: {{ section.settings.padding_bottom }}px; */
      padding-bottom: 36px;
    }
  }
{%- endstyle -%}

<div class="recently-viewed-section-wrapper page-width section-{{ section.id }}-padding">
  <h2 class="related-products__heading inline-richtext h2">{{ section.settings.heading }}</h2>
  <div id="recently-viewed-products">
    {% comment %}
      We dynamically populate this element using JavaScript
    {% endcomment %}
  </div>
</div>

{% comment %}
  TODO: Add more customizaton options
{% endcomment %}
{% schema %}
{
  "name": "Recently Viewed Products",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Recently viewed"
    }
  ],
  "presets": [
    {
      "name": "Recently viewed",
      "category": "Products"
    }
  ]
}
{% endschema %}
